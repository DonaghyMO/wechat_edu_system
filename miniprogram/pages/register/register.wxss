.register-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .logo {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
  }
  
  .app-name {
    font-size: 24px;
    margin-bottom: 20px;
  }
  
  .input-field {
    width: 80%;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 10px;
    padding: 0 10px;
  }
  
  .register-button {
    width: 80%;
    height: 40px;
    background-color: #4caf50;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .login-link {
    margin-top: 20px;
  }
  
  .login-link text {
    font-size: 14px;
    color: #4caf50;
  }
  