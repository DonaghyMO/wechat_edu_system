/* pages/resource/resource.wxss */
/* 通知列表容器样式 */
.list-container {
    background-color: #c45a65; /* 中国红 */
    padding: 10px;
    border-radius: 8px;
  }
  
  /* 单个通知项样式 */
  .list-item {
    display: flex;
    width: 90%;
    align-items: center;
    margin-bottom: 10px;
    background-color: #FFF; /* 白色背景 */
    border-radius: 8px;
    padding: 10px;
  }

  /* 通知图标样式 */
  .resource-icon {
    width: 40px;
    height: 40px;
    margin-right: 10px;
  }
  
  /* 通知文本容器样式 */
  .resource-text {
    flex: 1;
  }
  
  /* 通知内容样式 */
  .resource-content {
    font-size: 14px;
    color: #666; /* 中灰色 */
  }