.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.chat-messages {
    flex: 1;
    padding: 10px;
    overflow-y: scroll;
}

.message-item {
    width: 80%;
    background-color: #E0E0E0;
    padding: 5px;
    border-radius: 5px;
    margin-bottom: 10px;
}
.message-text {
    color: #333;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
    background-color: #FFF;
}

.input-field {
    flex: 1;
    height: 40px;
    border: 1px solid #DDD;
    border-radius: 5px;
    padding: 5px;
    margin-right: 10px;
}

.send-button {
    background-color: #007AFF;
    color: #FFF;
    border: none;
    border-radius: 5px;
    padding: 5px 10px;
}