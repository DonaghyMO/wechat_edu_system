  /* 样式文件 */
  page{
    background-color: #c45a65;
}
 /* 通知列表容器样式 */
 .list-container {
    background-color: #c45a65; /* 中国红 */
    padding: 10px;
    border-radius: 8px;
  }
  
  /* 单个通知项样式 */
  .list-item {
    display: flex;
    width: 90%;
    align-items: center;
    margin-bottom: 10px;
    background-color: #FFF; /* 白色背景 */
    border-radius: 8px;
    padding: 10px;
  }

  /* 通知图标样式 */
  .resource-icon {
    width: 40px;
    height: 40px;
    margin-right: 10px;
  }
  
  /* 通知文本容器样式 */
  .resource-text {
    flex: 1;
  }
  
  /* 通知内容样式 */
  .resource-content {
    font-size: 14px;
    color: #666; /* 中灰色 */
  }

  .search-bar {
    display: flex;
    align-items: center; /* 垂直居中 */
    padding: 10px; /* 设置内边距，根据需要调整 */
    background-color: #f5f5f5; /* 设置背景颜色，根据需要调整 */
  }
  
  input {
    flex: 1; /* 填满剩余宽度 */
    height: 20px; /* 设置文本输入框高度，根据需要调整 */
    padding: 5px; /* 设置内边距，根据需要调整 */
    border: 1px solid #ccc; /* 设置边框，根据需要调整 */
  }
  
  button {
    margin-left: 10px; /* 设置按钮与输入框的间距，根据需要调整 */
    height: 30px; /* 设置按钮高度，根据需要调整 */
    background-color: #007aff; /* 设置按钮背景颜色，根据需要调整 */
    color: #fff; /* 设置按钮文本颜色，根据需要调整 */
    border: none; /* 移除按钮边框 */
    border-radius: 5px; /* 设置按钮圆角，根据需要调整 */
    padding: 0 10px; /* 设置按钮内边距，根据需要调整 */
  }
  button:hover{
    margin-left: 10px; /* 设置按钮与输入框的间距，根据需要调整 */
    height: 30px; /* 设置按钮高度，根据需要调整 */
    background-color: #1f66b3; /* 设置按钮背景颜色，根据需要调整 */
    color: #fff; /* 设置按钮文本颜色，根据需要调整 */
    border: none; /* 移除按钮边框 */
    border-radius: 5px; /* 设置按钮圆角，根据需要调整 */
    padding: 0 10px; /* 设置按钮内边距，根据需要调整 */
  }