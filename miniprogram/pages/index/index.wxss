/**index.wxss**/
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    margin-top: 0%;
}

/* 滚动通知栏的样式 */
.notice-container {
    width: 100%;
    height: 40px;
    /* 设置通知栏的高度 */
    overflow: hidden;
    /* 隐藏溢出部分 */
    background-color: #E64E4E;
    /* 设置背景色 */
    display: flex;
    color: #FFF;
    /* 白色文字 */
}

.notice-item {
    line-height: 40px;
    /* 设置行高，使文本垂直居中 */
    padding: 0 20px;
    /* 设置左右内边距 */
    color: #FFF;
    /* 设置文本颜色 */
    font-size: 14px;
    /* 设置字体大小 */
}

notice-container1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #E64E4E;
    /* 红色背景 */
    padding: 10px 20px;
    /* 内边距 */
    color: #FFF;
    /* 白色文字 */
    font-size: 14px;
    /* 字体大小 */
    position: relative;
}

/* 样式文件 */
.search-bar {
    display: flex;
    align-items: center;
    /* 垂直居中 */
    padding: 10px;
    /* 设置内边距，根据需要调整 */
    background-color: #f5f5f5;
    /* 设置背景颜色，根据需要调整 */
}

input {
    flex: 1;
    /* 填满剩余宽度 */
    height: 20px;
    /* 设置文本输入框高度，根据需要调整 */
    padding: 5px;
    /* 设置内边距，根据需要调整 */
    border: 1px solid #ccc;
    /* 设置边框，根据需要调整 */
}

button {
    margin-left: 10px;
    /* 设置按钮与输入框的间距，根据需要调整 */
    height: 30px;
    /* 设置按钮高度，根据需要调整 */
    background-color: #007aff;
    /* 设置按钮背景颜色，根据需要调整 */
    color: #fff;
    /* 设置按钮文本颜色，根据需要调整 */
    border: none;
    /* 移除按钮边框 */
    border-radius: 5px;
    /* 设置按钮圆角，根据需要调整 */
    padding: 0 10px;
    /* 设置按钮内边距，根据需要调整 */
}

button:hover {
    margin-left: 10px;
    /* 设置按钮与输入框的间距，根据需要调整 */
    height: 30px;
    /* 设置按钮高度，根据需要调整 */
    background-color: #1f66b3;
    /* 设置按钮背景颜色，根据需要调整 */
    color: #fff;
    /* 设置按钮文本颜色，根据需要调整 */
    border: none;
    /* 移除按钮边框 */
    border-radius: 5px;
    /* 设置按钮圆角，根据需要调整 */
    padding: 0 10px;
    /* 设置按钮内边距，根据需要调整 */
}

.imageSwiper {
    width: 100%;
    height: 250px;
    /* 设置轮播图的高度 */
    align-items: center;
    background-color: brown;
}

.imageItem {
    height: auto;
    width: auto;
    display: flex;
    justify-content: center;
}

/* 四宫格容器样式 */
.grid-container {
    margin-top: 10%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    /* 项目之间的空白间隔 */
    padding: 10px;
    /* 外边距，可根据需要调整 */
}

/* 单个格子样式 */
.grid-item {
    width: calc(50% - 10px);
    /* 50%宽度，减去外边距 */
    margin-bottom: 20px;
    /* 底部外边距，可根据需要调整 */
    background-color: #f1f1f1;
    /* 格子背景色，可根据需要调整 */
    border-radius: 10px;
    /* 圆角边框 */
    overflow: hidden;
    /* 隐藏溢出内容 */
}

/* 格子内容样式 */
.grid-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* 内容垂直居中 */
    padding: 10px;
    /* 内边距，可根据需要调整 */
}

/* 图片样式 */
.grid-image {
    width: 80px;
    /* 图片宽度，可根据需要调整 */
    height: 80px;
    /* 图片高度，可根据需要调整 */
    border-radius: 50%;
    /* 圆形图片 */
}

/* 文本样式 */
.grid-text {
    margin-top: 10px;
    /* 顶部外边距，可根据需要调整 */
    font-size: 14px;
    /* 字体大小，可根据需要调整 */
    color: #333;
    /* 文本颜色，可根据需要调整 */
    text-align: center;
    /* 文本水平居中 */
}